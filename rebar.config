%%% -*- mode: erlang -*-
{erl_opts,
 [
  {parse_transform, lager_transform},
  {lager_truncation_size, 1024},
  debug_info,
  %% bin_opt_info,
  warn_unused_vars,
  warn_shadow_vars,
  %% warn_unused_import,
  warnings_as_errors
 ]}.
{deps_dir, ["deps"]}.
{deps, [
    {'lager', ".*", {git, "https://github.com/basho/lager.git", {tag, "2.0.0"}}},
    {'thrift', ".*", {git, "https://github.com/dieswaytoofast/thrift.git", {tag, "0.9"}}},
    {'d_util', ".*", {git, "https://github.com/dieswaytoofast/d_util.git", "HEAD"}},
    {'bstr', ".*", {git, "https://github.com/jcomellas/bstr.git", "HEAD"}},
    {'proper', ".*", {git, "https://github.com/manopapad/proper.git", {tag, "v1.1"}}},
    {'poolboy', ".*", {git, "git://github.com/devinus/poolboy.git", "HEAD"}}
       ]}.
{cover_enabled, true}.
{clean_files, ["test/*.beam"]}.
